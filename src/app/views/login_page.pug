doctype html

html(lang="en")
head
	title Wikipdia Analytics

	link(rel="stylesheet" href="http://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css")
	link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity
		|="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")

body


	div.discription(class='container')
		div(class="row")
			div(class="col-xl-12")
				h1(class="text-center") Login in Please
	div(class='container')
		form(method='POST' action='check')
			div
				label(for='uname') Username

			div(class='text-center')
				input(type='text' class="form-control" id='uname' placeholder="Enter Username" name="uname" required)

			div
				label(for='password') Password

			div(class='text-center')
				input(type='password' class="form-control" id='password' placeholder="Enter Password" name="psw" required)

			div(class='text-center')
				button(type='submit' class="btn btn-block btn-primary btn-lg") Log in

		form(method='POST' action='signin')
			div(class='text-center')
				button(type='submit' class="btn btn-block btn-success btn-lg") Sign in